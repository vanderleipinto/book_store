<p style="color: green"><%= notice %></p>

<h1>Authors</h1>

<%= render "search_form", author: @author %>

<div id="authors">
  <% @authors.each do |author| %>
    <%= render author %>
    <p>
      <%= link_to "Show this author", author %>
    </p>
    <hr>
  <% end %>
</div>

<%= link_to "New author", new_author_path %>



